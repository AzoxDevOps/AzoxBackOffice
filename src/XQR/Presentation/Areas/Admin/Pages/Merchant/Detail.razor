@if (Model != null)
{
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#maintab">
                Genel
            </button>
        </li>
        @if (!IsNew)
        {
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#storestab">
                    Hizmetler
                </button>
            </li>
        }
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="maintab">
            <_Info IsNew="IsNew" Model="Model" />
        </div>
        @if (!IsNew)
        {
            <div class="tab-pane fade" id="storestab">
                <_Stores Model="Model" />
            </div>
        }
    </div>
}