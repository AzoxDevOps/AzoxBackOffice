@page "/admin/category/list"
@inherits AuthorizeComponent

<AuthorizeView Roles="@($"{nameof(UserGroupType.Admin)}, {nameof(UserGroupType.MerchantAdmin)}, {nameof(UserGroupType.ServiceAdmin)}")">
    <Authorized>
        <GenericSummary OnSearch="OnSearch" PageTitle="Kategoriler">
            <ToolbarTemplate>
                <div class="btn-group btn-group-sm me-2">
                    <button class="btn btn-primary btn-sm" @onclick="OnCreate">
                        <span>Yeni</span>
                    </button>
                </div>
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-secondary btn-sm">
                        <span>İçeri Aktar</span>
                    </button>
                    <button class="btn btn-secondary btn-sm">
                        <span>Dışarı Aktar</span>
                    </button>
                </div>
            </ToolbarTemplate>
            <Template>
                <RadzenDataGrid TItem="CategoryDto"
                                Data="DataSource"
                                AllowSorting="true"
                                AllowPaging="true"
                                PageSize="Globals.DefaultGridPageSize"
                                PageSizeOptions="Globals.GridPageSizes">
                    <Columns>
                        <RadzenDataGridColumn TItem="CategoryDto" Property="DisplayOrder" Title="Sıra No" />
                        <RadzenDataGridColumn TItem="CategoryDto" Property="Service.Merchant.Name" Title="İşletme Adı" />
                        <RadzenDataGridColumn TItem="CategoryDto" Property="Service.Name" Title="Hizmet Adı" />
                        <RadzenDataGridColumn TItem="CategoryDto" Property="Name" Title="Adı" />
                        <RadzenDataGridColumn TItem="CategoryDto" Title="Aktif" TextAlign="TextAlign.Center" Width="4rem">
                            <Template Context="item">
                                <span class="material-icons">@(item.IsActive ? "check_circle":"cancel")</span>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="CategoryDto" TextAlign="TextAlign.Right" Width="7rem">
                            <Template Context="item">
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-sm btn-light shadow rounded-2">
                                        <span class="material-icons">edit</span>
                                    </button>
                                    <button class="btn btn-sm btn-dark shadow rounded-2">
                                        <span class="material-icons">delete</span>
                                    </button>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </Template>
        </GenericSummary>
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedPageView />
    </NotAuthorized>
</AuthorizeView>