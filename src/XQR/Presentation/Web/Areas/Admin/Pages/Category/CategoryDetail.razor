<EditForm EditContext="EditContext" OnValidSubmit="OnSave">
    <GenericDetail PageTitle="@(Model.IsNew ? "Yeni Kategori Ekle": $"{Model.Name} - Düzenle")">
        <Template>
            <div class="container-fluid">
                @if (Model.IsNew)
                {
                    <MainTabContent />
                }
                else
                {
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#main" type="button">
                                <span>Genel</span>
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="main">
                            <MainTabContent />
                        </div>
                    </div>
                }
            </div>
        </Template>
    </GenericDetail>
</EditForm>