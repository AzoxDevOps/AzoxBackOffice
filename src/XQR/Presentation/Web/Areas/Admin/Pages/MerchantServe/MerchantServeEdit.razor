@page "/admin/service/{MerchantServeId:int}"
@inherits AuthComponent

<AuthorizeView Roles="@($"{nameof(UserGroupType.Admin)}, {nameof(UserGroupType.MerchantAdmin)}")">
    <Authorized>
        @if (_allowEdit)
        {
            <CascadingValue Value="Model">
                <MerchantServeDetail />
            </CascadingValue>
        }
        else
        {
            <NotAuthorizedPageView />
        }
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedPageView />
    </NotAuthorized>
</AuthorizeView>