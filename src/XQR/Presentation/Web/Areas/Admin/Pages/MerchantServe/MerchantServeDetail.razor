@inherits AuthComponent

<GenericDetail Model="Model"
               OnClose="OnClose"
               OnDelete="OnDelete"
               OnSave="OnSave">
    <BreadCrumb>
        <RadzenBreadCrumb>
            <RadzenBreadCrumbItem Text="Hizmetler" Path="/admin/service/list" />
            <RadzenBreadCrumbItem Text="@(Model.IsNew ? "Yeni Hizmet Ekle" : Model.Name)" />
        </RadzenBreadCrumb>
    </BreadCrumb>
    <Template>
        <CascadingValue Value="Model">
            @if (Model.IsNew)
            {
                <MainTabContent />
            }
            else
            {
                <RadzenTabs>
                    <Tabs>
                        <RadzenTabsItem Text="Genel">
                            <MainTabContent />
                        </RadzenTabsItem>
                    </Tabs>
                </RadzenTabs>
            }
        </CascadingValue>
    </Template>
</GenericDetail>