@page "/admin/product/list"
@inherits AuthorizeComponent

<AuthorizeView Roles="@($"{nameof(UserGroupType.Admin)}, {nameof(UserGroupType.MerchantAdmin)}, {nameof(UserGroupType.ServiceAdmin)}")">
    <Authorized>
        <GenericSummary OnSearch="OnSearch">
            <Template>
                <RadzenDataGrid TItem="ProductDto"
                                Data="DataSource"
                                AllowSorting="true"
                                AllowPaging="true"
                                PageSize="Globals.DefaultGridPageSize"
                                PageSizeOptions="Globals.GridPageSizes">
                    <Columns>
                        <RadzenDataGridColumn TItem="ProductDto" Property="DisplayOrder" Title="Sıra No" />
                        <RadzenDataGridColumn TItem="ProductDto" Property="Service.Merchant.Name" Title="İşletme Adı" />
                        <RadzenDataGridColumn TItem="ProductDto" Property="Service.Name" Title="Hizmet Adı" />
                        <RadzenDataGridColumn TItem="ProductDto" Property="Name" Title="Adı" />
                        <RadzenDataGridColumn TItem="ProductDto" Title="Aktif" TextAlign="TextAlign.Center" Width="4rem">
                            <Template Context="item">
                                <span class="material-icons">@(item.IsActive ? "check_circle":"cancel")</span>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="ProductDto" TextAlign="TextAlign.Right" Width="7rem">
                            <Template Context="item">
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-sm btn-light shadow rounded-2">
                                        <span class="material-icons">edit</span>
                                    </button>
                                    <button class="btn btn-sm btn-dark shadow rounded-2">
                                        <span class="material-icons">delete</span>
                                    </button>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </Template>
        </GenericSummary>
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedPageView />
    </NotAuthorized>
</AuthorizeView>