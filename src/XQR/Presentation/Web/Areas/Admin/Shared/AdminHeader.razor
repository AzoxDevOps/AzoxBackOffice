<header class="sticky-top">
    <div class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container-xl">
            <a class="navbar-brand" href="/admin">@XResource.AppName</a>
            <button class="btn btn-dark" @onclick="SignOut">
                <span class="material-icons">power_settings_new</span>
            </button>
        </div>
    </div>
    <div class="navbar d-none d-md-flex topmenu">
        <div class="container-xl">
            <RadzenMenu>
                @foreach (var item in MenuItems.Items)
                {
                    if (!item.Roles.Contains((int)_userGroupType))
                    {
                        continue;
                    }

                    if (item.Items != null && item.Items.Count > 0)
                    {
                        <RadzenMenuItem Text="@item.Name">
                            @foreach (var innerItem in item.Items)
                            {
                                if (!innerItem.Roles.Contains((int)_userGroupType))
                                {
                                    continue;
                                }

                                <RadzenMenuItem Text="@innerItem.Name" Path="@innerItem.Url" />
                            }
                        </RadzenMenuItem>
                    }
                    else
                    {
                        <RadzenMenuItem Text="@item.Name" Path="@item.Url" />
                    }
                }
            </RadzenMenu>
        </div>
    </div>
</header>