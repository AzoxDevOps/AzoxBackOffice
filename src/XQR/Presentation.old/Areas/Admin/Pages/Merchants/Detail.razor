@layout DetailLayout
@inherits DetailLayout

<div class="page-wrapper">
    <div class="page-header">
        <h2 class="page-title">
            @(IsNew ? "Yeni İşletme Ekle" : $"{Model.Name} - Düzenle")
        </h2>
        <div class="page-toolbar d-none d-md-block">
            <div class="btn-group">
                <button type="button" class="btn btn-primary">
                    <i class="bi bi-save" />
                    <span>Kaydet</span>
                </button>
                <button type="button" class="btn btn-secondary">
                    <i class="bi bi-save-fill" />
                    <span>Kaydet & Kapat</span>
                </button>
                <button type="button" class="btn btn-info">
                    <i class="bi bi-chevron-left" />
                    <span>Kapat</span>
                </button>
            </div>
            <div class="btn-group ms-2">
                <button type="button" class="btn btn-danger">
                    <i class="bi bi-x-lg" />
                    <span>Sil</span>
                </button>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-12">
                        <label class="col-form-label">Adı</label>
                        <input type="text" class="form-control" @bind-value="Model.Name" />
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Kısa Bilgi</label>
                        <textarea type="text" class="form-control" @bind="Model.Description" />
                    </div>
                </div>
                <div class="accordion">
                    <div class="accordion-item">
                        <div class="accordion-header">
                            <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#merchant-contact">
                                Yetkili
                            </button>
                        </div>
                        <div class="accordion-collapse collapse" id="merchant-contact">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-12">
                                        <label class="col-form-label">Yetkili</label>
                                        <input type="text" class="form-control" @bind-value="Model.Contact.Name" />
                                    </div>
                                    <div class="col-12">
                                        <label class="col-form-label">Yetkili Telefon</label>
                                        <input type="text" class="form-control" @bind-value="Model.Contact.Phone" />
                                    </div>
                                    <div class="col-12">
                                        <label class="col-form-label">Yetkili Email</label>
                                        <input type="text" class="form-control" @bind-value="Model.Contact.Email" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-toolbar-bottom d-flex d-md-none shadow">
        <div class="btn-group">
            <button type="button" class="btn btn-primary">
                <i class="bi bi-save" />
                <span>Kaydet</span>
            </button>
            <button type="button" class="btn btn-secondary">
                <i class="bi bi-save-fill" />
                <span>Kaydet & Kapat</span>
            </button>
            <button type="button" class="btn btn-info">
                <i class="bi bi-chevron-left" />
                <span>Kapat</span>
            </button>
            <button type="button" class="btn btn-danger">
                <i class="bi bi-x-lg" />
                <span>Sil</span>
            </button>
        </div>
    </div>
</div>
