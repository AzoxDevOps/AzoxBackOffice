@page "/admin/merchants"
<Summary PageTitle="İşletmeler" ShowToolbar="true">
    <SummaryView>
        <RadzenDataGrid TItem="MerchantDto" 
                        Data="DataSource"
                        AllowSorting="true"
                        AllowPaging="true"
                        PageSize="10"
                        PageSizeOptions="Global.GridPageSizeOptions">
            <Columns>
                <RadzenDataGridColumn TItem="MerchantDto" Property="Name" Title="İşletme Adı" />
                <RadzenDataGridColumn TItem="MerchantDto" Title="İşletme Tipi">
                    <Template Context="item">
                        <span>@item.MerchantType.GetDescription()</span>
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </SummaryView>
    <MobileView>
        @if (DataSource != null)
        {
            <ul class="list-group">
                @foreach (var item in DataSource)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@item.Name</span>
                            <div class="btn-group">
                                <button class="btn btn-light btn-sm">
                                    <span class="material-icons">edit</span>
                                </button>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    </MobileView>
</Summary>